<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Datetime</th>
      <th>User</th>
      <th>Items Qtd.</th>
      <th>Products</th>
      <th>Total Value</th>
      <th>Avg Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%H:%M:%S %d/%m/%Y") %></td>
        <td><%= order.user.name %></td>
        <td><%= order.order_items.size %></td>
        <td><%= order.product_names %></td>
        <td><%= number_to_currency(order.total) %>
        <td><%= number_to_currency(order.avg_value) %>
      </tr>
    <% end %>
  </tbody>
</table>
